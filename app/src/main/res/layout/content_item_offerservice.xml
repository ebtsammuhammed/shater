<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/backgroundapp2"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@mipmap/customer_used" />


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/commsuggest"-->
<!--                android:textColor="@color/WHITE"-->
<!--                android:layout_gravity="center"-->
<!--                android:paddingLeft="3dp"-->
<!--                android:textSize="10dp"-->
<!--                android:layout_marginRight="2dp"-->
<!--                android:layout_marginLeft="2dp"/>-->
            <TextView
                android:id="@+id/tv_priceoffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/WHITE"
                android:textSize="12dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_accept_myoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accepted"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/WHITE"
                android:background="@drawable/ground_buttonaccept"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/btn_view_myoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vieworder"
                android:textSize="10dp"
                android:textColor="@color/WHITE"
                android:background="@drawable/ground_buttondecline"/>
            <Button
                android:id="@+id/btn_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/pand"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/WHITE"
                android:background="@drawable/ground_buttondecline"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>